<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <!-- Стиль для вкладок Ribbon -->
    <Style Selector="Border.ribbon-tab-border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <!-- Стиль для кнопок вкладок Ribbon -->
    <Style Selector="Button.ribbon-tab-button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#333333"/>
    </Style>

    <Style Selector="Button.ribbon-tab-button:pointerover">
        <Setter Property="Background" Value="#F0F0F0"/>
        <Setter Property="Foreground" Value="#000000"/>
    </Style>

    <Style Selector="Button.ribbon-tab-button:pressed">
        <Setter Property="Background" Value="#E0E0E0"/>
    </Style>

    <!-- Стиль для подменю Ribbon -->
    <Style Selector="Border.ribbon-submenu-border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <!-- Стиль для группы в подменю -->
    <Style Selector="Border.ribbon-group-border">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="Margin" Value="0,0,15,0"/>
        <Setter Property="Padding" Value="0,0,15,0"/>
    </Style>

    <!-- Стиль для последней группы -->
    <Style Selector="Border.ribbon-group-border:last-child">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,0,15,0"/>
        <Setter Property="Padding" Value="0,0,15,0"/>
    </Style>

    <!-- Стиль для текста группы -->
    <Style Selector="TextBlock.ribbon-group-title">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#666666"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Стиль для строки состояния -->
    <Style Selector="Border.status-bar-border">
        <Setter Property="Background" Value="#E6E6E6"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
    </Style>

    <Style Selector="TextBlock.status-text">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.status-label">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</Styles>